#!/bin/csh

set batchdir = ~/batchdirs/$1
cd $batchdir
mkdir -p pbsout
set joblist = `cat scriptlist.txt`

set h_vmem = $2

foreach job ( $joblist )
  echo $job
  if (-e pbsout/$job.out) then
    rm pbsout/$job.out
  endif
  if (-e pbsout/$job.err) then
    rm pbsout/$job.err
  endif
  echo "qcshjob $batchdir $job.csh" '|' qsub -V -hard -l 'lic_neuromag=1,h_vmem='$h_vmem -cwd -N $1_$job -o pbsout/$job.out -e pbsout/$job.err
  echo "qcshjob $batchdir $job.csh" | qsub -V -hard -l 'lic_neuromag=1,h_vmem='$h_vmem -cwd -N $1_$job -o pbsout/$job.out -e pbsout/$job.err
  sleep 0.25
end

